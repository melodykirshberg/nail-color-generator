<%= form_for @polish do |form| %>
  <div>
    <label>Brand: </label>
    <%= form.text_field :brand %>
  </div>

  <div>
    <label>Name: </label>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <label>Color: </label>
    <%= form.select :color, Polish.colors.keys.map { |color| [color.titleize, color] } %>
  </div>
  
  <div>
    <label>Polish Type: </label>
    <%= form.select :polish_type, Polish.polish_types.keys.map { |polish| [polish.titleize, polish] } %>
  </div>
  
    <% if polish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(polish.errors.count, "error") %> prohibited this polish from being saved:</h2>

      <ul>
        <% polish.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
