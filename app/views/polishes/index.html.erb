<p id="notice"><%= notice %></p>

<h1>Polishes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Color</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @polishes.each do |polish| %>
      <tr>
        <td><%= polish.name %></td>
        <td><%= polish.brand %></td>
        <td><%= polish.color %></td>
        <td><%= polish.polish_type %></td>
        <td><%= link_to 'Show', polish %></td>
        <td><%= link_to 'Edit', edit_polish_path(polish) %></td>
        <td><%= link_to 'Destroy', polish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

